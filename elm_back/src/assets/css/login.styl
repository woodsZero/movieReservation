.wrap
    position fixed
    width 100%
    height 100%
    z-index 1
    background url(../assets/img/login.jpg)
    background-size cover
    .login_box
        width 350px
        height 400px
        padding 35px 
        color #EEE
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        margin auto
        h3
            font-weight inherit
            text-align center
            height 20px
            font-size 20px
            color #fff
            line-height 20px
            padding-bottom 35px
        .input-outer
            height 40px
            border-radius 50px
            position relative
            border rgba(255,255,255,0.2) 2px solid !important
        .input-btn
            height 46px
            margin-bottom 30px
            border-radius 50px
            position relative
        .input-outer /deep/ .el-input__inner
            font-size 18px
            background rgba(255,255,255,0)  
            border none 
            color #fff
            padding-left 40px
        .select-outer /deep/ .el-select
            width 100%
        .select-outer /deep/ .el-input__inner
            width 100%
        .btn-outer /deep/ .el-button
            width 100%
            height 100%
            border none 
            font-size 18px 
            color #fff 
        


